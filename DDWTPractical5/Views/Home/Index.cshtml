<div class="background">
    <div class="transbox text-center anton-regular font-italic">
        <h3>"Magic exists in the quiet moments of life, where even the simplest of stories can stir the deepest emotions."</h3>
    </div>
</div>
<div class="im-bg">
    <div class="container body-content">
        <form method="post" action="/Home/Index">
            <div class="row justify-content-center">
                <input type="text" placeholder="Search Film" class="form-control col-4 mt-5 card-link" name="search" value="@search" />
                <button type="submit" class="ml-3 btn btn-outline-dark mt-5">
                    <i class="bi bi-search"></i>
                </button>
            </div>
            <hr />
        </form>

        @if (data != null && data.Count() > 0)
        {
            <div class="row justify-content-center">
                @foreach (var row in data)
                {
                    <div class="card mb-5 ml-5 card-link" style="width: 18rem;">
                        <img class="card-img-top" src="@row.filmImage" alt="Card image cap" height="390">
                        <div class="card-body card-title text-center">
                            <a href="/Home/Detail?id=@row.filmID" class="anton-regular btn btn-outline-warning text-dark">@row.filmName</a>
                        </div>
                    </div>
                }
            </div>

        }

        else
        {
            <div class="text-center">
                <h4 class="anton-regular alert-danger">Not found </h4>
                <img src="https://i.pinimg.com/564x/f8/33/5b/f8335b67ce15d3e1e8da4e70a7922fd0.jpg" alt="Studio Image" />
            </div>
        }
    </div>


</div>
<script>
    var card = document.querySelectorAll('.card');
    for (var i = 0; i < card.length; i++) {
        card[i].addEventListener('click', function () {
            this.querySelector('a').click();
        })
    }
</script>
