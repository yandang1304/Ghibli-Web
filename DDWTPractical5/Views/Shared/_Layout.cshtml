<script>
    let currentSlide = 0;
    const slides = document.querySelector('.slides');
    const allSlides = document.querySelectorAll('.slide');
    const totalSlides = allSlides.length;

    // Clone the first slide and append it to the end for seamless looping
    const firstSlideClone = allSlides[0].cloneNode(true);
    slides.appendChild(firstSlideClone);

    // Show the next slide
    function showSlide(index) {
        slides.style.transition = "transform 1s ease"; // Add transition for smooth sliding

        // Move to the next slide
        if (index > totalSlides - 1) {
            currentSlide = 0; // Reset to first slide (before transition happens)
            slides.style.transition = "none"; // Disable transition for reset
            slides.style.transform = `translateX(0%)`; // Instantly jump back to the first slide
        } else {
            currentSlide = index;
            slides.style.transform = `translateX(${-currentSlide * 100}%)`;
        }
    }

    // Automatically cycle through slides every 3 seconds
    setInterval(() => {
        if (currentSlide >= totalSlides) {
            // Reset to the first slide without transition
            setTimeout(() => {
                slides.style.transition = "none"; // Disable transition for reset
                slides.style.transform = `translateX(0%)`; // Instantly jump back to the first slide
                currentSlide = 0;
            }, 1000); // Time to wait for the last slide animation to complete
        } else {
            showSlide(currentSlide + 1);
        }
    }, 2000);
</script>

